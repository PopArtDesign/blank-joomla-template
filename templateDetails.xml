<?xml version="1.0" encoding="utf-8"?>
<extension type="template" client="site">
    <name>Base template</name>
    <version>1.0</version>
    <creationDate>2016-08</creationDate>
    <author>popartdesign.ru</author>
    <authorEmail>info@popartdesign.ru</authorEmail>
    <authorUrl>https://popartdesign.ru</authorUrl>
    <copyright>popartdesign.ru</copyright>
    <description>Base template</description>

    <files>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
        <folder>css</folder>
        <folder>images</folder>
    </files>

    <positions>
        <position>header</position>
        <position>footer</position>
    </positions>

    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field
                    name="useJquery"
                    type="radio"
                    layout="joomla.form.field.radio.switcher"
                    default="0"
                    label="Use jQuery"
                    >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>

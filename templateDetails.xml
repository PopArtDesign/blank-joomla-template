<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 3/0//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/3.0/template-install.dtd">
<extension version="3.0" type="template" client="site">
    <name>Base template</name>
    <version>1.0</version>
    <creationDate></creationDate>
    <author>popartdesign.ru</author>
    <authorEmail>info@popartdesign.ru</authorEmail>
    <authorUrl>http://popartdesign.ru</authorUrl>
    <copyright>popartdesign.ru</copyright>
    <description>Base template</description>

    <files>
        <filename>index.php</filename>
        <folder>css</folder>
        <folder>images</folder>
    </files>

    <positions>
        <position>header</position>
        <position>footer</position>
    </positions>

    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field
                    name="useJquery"
                    type="radio"
                    layout="joomla.form.field.radio.switcher"
                    default="0"
                    label="Use jQuery"
                    >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
